<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/boardnoposition"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="点击"/>

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plane_blue"
        />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plane_red"/>

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plane_yellow"/>

    <Button
        android:id="@+id/btn_test4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plane_green"/>


</LinearLayout>