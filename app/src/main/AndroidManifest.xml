<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.yifeihappy.planechess">

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="com.example.aty1.AtyMain"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.aty1.AtyGameClient"></activity>
        <activity android:name="com.example.aty1.AtyGameSever"></activity>

        <activity android:name="com.example.aty1.AtySelectGame"></activity>
        <activity android:name="com.example.aty1.AtyRule"></activity>
        <activity android:name="com.example.aty1.AtyStartClassicGame"></activity>
        <activity android:name="com.example.aty1.AtyCreateRoom"></activity>
        <activity android:name="com.example.aty1.AtyWaitClients"></activity>
        <activity android:name="com.example.aty1.AtyClientSetting"></activity>
        <activity android:name="com.example.aty1.AtyStartWifiGame"></activity>
    </application>

</manifest>
