<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main_empty"
                android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mountain">

        <Button
            android:id="@+id/btn_aty_usersetting_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/bg_rule"
            android:orientation="vertical"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:text="昵称"
                android:textColor="#218868"/>

            <EditText
                android:id="@+id/edtName"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/line">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:text="选择飞机:"
                    android:textColor="@color/textcolor"/>

                <RadioGroup
                    android:id="@+id/radiogroupColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/redradio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bule"
                        android:textColor="@color/textcolor"/>

                    <RadioButton
                        android:id="@+id/yelloradio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Red"
                        android:textColor="@color/textcolor"/>

                    <RadioButton
                        android:id="@+id/blueradio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yellow"
                        android:textColor="@color/textcolor"/>

                    <RadioButton
                        android:id="@+id/whiteradio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Green"
                        android:textColor="@color/textcolor"/>
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_btn_startxml"
            />
    </RelativeLayout>


</RelativeLayout>
